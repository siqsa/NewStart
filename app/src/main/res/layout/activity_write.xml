<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72D3F7">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:textSize="18dp" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/writeEditText"
        android:layout_alignRight="@+id/dateTextView"
        android:text="작성 완료"
        android:background="@drawable/writebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="submitDiary"/>

    <EditText
        android:hint="일기를 작성해주세요."
        android:id="@+id/writeEditText"
        android:layout_below="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/round_edittext"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:scrollbars="vertical"
        android:lines="17"
        android:minLines="10"/>

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/writebtn"
        android:text="알림 시간 선택"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_below="@id/writeEditText"/>



</RelativeLayout>