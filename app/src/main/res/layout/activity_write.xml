<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:hint="2017년 11월 29일 수요일"
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginLeft="50dp"
        android:textSize="18dp" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="20dp"
        android:layout_above="@+id/writeEditText"
        android:layout_alignRight="@+id/dateTextView"
        android:text="Submit"
        android:background="@drawable/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:onClick="submitDiary"/>

    <EditText
        android:hint="여기에 일기를 작성해주세요!"
        android:id="@+id/writeEditText"
        android:layout_below="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/round_edittext"
        android:layout_margin="10dp"
        android:textAlignment="center"/>



</RelativeLayout>